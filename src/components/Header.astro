---
import HeaderLink from './HeaderLink.astro';
---

<style>
.header {
	display: flex;
	flex-direction: row;
	width: 100%;
	margin-bottom: 26rem;
	justify-content: space-between;

	@media (max-width: 900px) {
		margin-bottom: 0;
	}
}

.header-logo-link {
    background-size: contain;
    background-repeat: no-repeat;
}

html.light-mode .header-logo-link {
    background-image: url('/assets/product/images/percept.svg?v=20250829');
}

html.dark-mode .header-logo-link {
    background-image: url('/assets/product/images/percept.svg?v=20250829');
}

.header__brand {
	height: auto;
	width: auto;
}

.header-logo-link {
	display: block;
	border: none;
	width: 100px;
	height: 80px;
	line-height: 0;
}

.navigation__extras {
	padding-left: 25rem;
	
	a {
		border: none;
		border: 1px solid light-dark(var(--set-color-base-100), var(--set-color-base-900));
		width: 100%;
		display: flex;
		flex-direction: row;
		justify-content: center;
		align-items: center;
		font-size: 0.6em;
		font-family: var(--set-font-mono);
		padding: 4rem 10rem;

		i {
			margin-right: 10rem;
			font-size: 2em;
		}

		&:hover {
			border-color: var(--set-color-purple);
		}
	}

	.tagline {
		margin-bottom: 6rem;

		span {
			font-family: var(--set-font-mono);
			text-transform: uppercase;
			font-size: 0.7em;
			font-weight: 700;

			&:last-child {
				color: var(--set-color-purple);
			}
		}
	}
}

.navigation__color-scheme {
    display: flex;
	flex-direction: column;
	align-items: center;
	justify-content: space-around;
    gap: 5rem; 
	/* padding-left: 10rem; */
	width: 30rem;
}

.navigation__color-scheme label {
    cursor: pointer;
    display: flex;
    align-items: center;
    justify-content: center;
    width: 20rem; 
    height: 20rem; 
}

.navigation__color-scheme label:hover {
    border-color: var(--set-color-base-inverse);
}

.navigation__color-scheme input {
    display: none;
}

.navigation__color-scheme input + i {
    opacity: 0.3;
	font-size: 20rem;
}

.navigation__color-scheme input + i:hover {
    opacity: 0.8;
}

.navigation__color-scheme input[value="light"] + i {
    color: var(--set-color-yellow);
}

.navigation__color-scheme input[value="dark"] + i {
    color: var(--set-color-purple);
}

.navigation__color-scheme input:checked + i {
	opacity: 1;
}

</style>

<header class="header p-t-1">
	
	<div class="header__brand">
		<HeaderLink href="/" class="header-logo-link"></HeaderLink>
	</div>	

	<div class="navigation__color-scheme">
		<label><input name="color-scheme" type="radio" value="light"/><i class="fa-solid fa-sun-cloud"></i></label>
		<label><input name="color-scheme" type="radio" value="dark"/><i class="fa-solid fa-moon-cloud"></i></label>
	</div>

	<div class="navigation__extras">
		<div class="tagline"><span>Your mind is my mind,</span> <span>re-arranged.</span></div>

		<a rel="alternate" type="application/rss+xml" title="Percept Index â€” All updates" href="/rss.xml"><i class="fa-sharp fa-light fa-rss"></i> all entries feed: journal, art, M43, &amp; essays</a>
	</div>
	
</header>
