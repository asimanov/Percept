---
import '../styles/assets/baseline/dist/baseline.min.css';
import '../styles/global.css';

interface Props {
  title: string;
  description: string;
  image?: string;
  // optional â€” use on articles/entries if you have them
  ogType?: 'website' | 'article';
  publishedTime?: string; // ISO
  modifiedTime?: string;  // ISO
  twitterHandle?: string; // e.g. '@perceptindex'
}

const {
  title,
  description,
  image = '/meta.jpg',
  ogType = 'website',
  publishedTime,
  modifiedTime,
  twitterHandle = '@perceptindex',
} = Astro.props;

// absolute URLs
const canonicalURL = new URL(Astro.url.pathname, Astro.site);
const pageURL = Astro.url.toString();
const imageURL = new URL(image, Astro.url).toString();

// keep description plain text for scrapers
const desc = (description ?? '').replace(/<[^>]+>/g, '');
---

<!-- Global Metadata -->
<meta charset="utf-8" />
<meta name="viewport" content="width=device-width,initial-scale=1" />
<link rel="icon" type="image/svg+xml" href="/assets/product/images/percept-icon.svg" />
<meta name="generator" content={Astro.generator} />

<!-- Canonical URL -->
<link rel="canonical" href={canonicalURL} />

<!-- Primary Meta Tags -->
<title>{title}</title>
<meta name="title" content={title} />
<meta name="description" content={desc} />
<link rel="sitemap" href="/sitemap-index.xml" />

<!-- Open Graph / Facebook -->
<meta property="og:type" content={ogType} />
<meta property="og:site_name" content="Percept Index" />
<meta property="og:url" content={pageURL} />
<meta property="og:title" content={title} />
<meta property="og:description" content={desc} />
<meta property="og:image" content={imageURL} />

{ogType === 'article' && (
  <>
    {publishedTime && <meta property="article:published_time" content={publishedTime} />}
    {modifiedTime && <meta property="article:modified_time" content={modifiedTime} />}
    <meta property="article:author" content="Anton Simanov" />
  </>
)}

<!-- Twitter (X) -->
<meta name="twitter:card" content="summary_large_image" />
<meta name="twitter:url" content={pageURL} />
<meta name="twitter:title" content={title} />
<meta name="twitter:description" content={desc} />
<meta name="twitter:image" content={imageURL} />
<meta name="twitter:creator" content={twitterHandle} />

<meta name="theme-color" content="#100f0f">

<!-- Styles -->
<link rel="preconnect" href="https://fonts.googleapis.com">
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
<link href="https://fonts.googleapis.com/css2?family=DM+Mono:ital,wght@0,300;0,400;0,500;1,300;1,400;1,500&family=DM+Sans:ital,opsz,wght@0,9..40,100..1000;1,9..40,100..1000&family=DM+Serif+Display:ital@0;1&display=swap" rel="stylesheet">
<link href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.3.1/css/bootstrap-grid.min.css" type="text/css" rel="stylesheet">

<!-- JS -->
<script src="https://code.jquery.com/jquery-3.4.1.min.js" is:inline></script>
